<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FrameActivity">

    <fragment
        android:id="@+id/frag_record"
        android:name="com.example.myapp.RecordFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <fragment
        android:id="@+id/frag_add"
        android:name="com.example.myapp.AddFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <RadioGroup
        android:id="@+id/bottomGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiorecord"
            style="@style/rb_btn_style"
            android:textSize="15sp"
            android:drawableTop="@drawable/jilu"
            android:text="@string/jilu" />


        <RadioButton
            android:id="@+id/radioadd"
            style="@style/rb_btn_style"
            android:textSize="15sp"
            android:drawableTop="@drawable/bianji"
            android:text="@string/jizhang" />

    </RadioGroup>

</LinearLayout>